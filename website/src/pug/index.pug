extends page

block vars
  - let page = data.pages.index
  -
    // https://github.com/cfjedimaster/Serverless-Examples/tree/master/recaptcha
    const HOST = 'https://www.google.com/recaptcha/api.js',
          KEY = '6LchYK0UAAAAAMRflt6o0V_1imaH5KDnH5XVjWjB'

append head-start
  if !isArrEmpty(hosts)
    each host in hosts
      link(rel="preconnect" href=`https://${host}` crossorigin)
      link(rel="dns-prefetch" href=`https://${host}` crossorigin)

//- append head-end
  script(src=`${HOST}?render=${KEY}&onload=initRecaptcha&render=explicit`)
  script(type="text/javascript").
    var initRecaptcha = function() {
      grecaptcha.ready(function() {
        grecaptcha.execute('6LchYK0UAAAAAMRflt6o0V_1imaH5KDnH5XVjWjB', { action: "homepage" }).then(function(token) {
          document.getElementById('recaptcha_token').value = token;
        });
      });
    }

mixin sec(props)
  - let { id, classes={}, attrs={}, ...rest } = props
  section(id= id class= classes)&attributes(attrs)
    block

block content
  //- TODO
    const sections = [{
      id: 'hero',
      attList: {
        'aria-label': 'hero banner',
        'data-sec': 'hero' }
    },{
      id: 'feed',
      attList: {
        'aria-label': 'all blog posts',
        'data-sec': 'news' }
    }]
  //- each item in sections
    +sec({
      id: item.id,
      classes: ['container', 'spaced', '--ada-md'],
      attList: {...attList},
    })

  section.grid
    //- section.container.bg-overlay#hero(data-sec="hero")
      //- video-player.grid__full(basename="footage-10s-prod")
      //- noscript.grid__full
        +video({
          sourcePath: 'static',
          sourceName: 'teaser',
          poster: '',
          dims: [1920, 1080] })

      hgroup(data-hidden)
        h1(itemprop="name")= brand.name
        p(itemprop="description" role="subtitle")= brand.desc

      //- .grid__center.logo: include ../images/logo.svg

    section.container.hero.popout#hero
      .grid__content.self.--start
        h1.title= brand.name

      .overlay#canvas
      .plane.grid__full
        img(
          src="../images/duotone.png"
          crossorigin="anonymous"
          data-sampler="basicPlaneTexture")
      +waves()
      //-
        include ../images/warp.svg
        include ../images/fish.svg
        include ../images/anomalous-motion-illusion.svg

    section.container.spaced.--ada-lg#intent(data-sec="intent")
      .grid__start-half.d-grid.items-start
        //- .halftone
        +head({
          class: ['font-display'],
          level: 2,
          text: ['Krähennest', '17.02'],
          split: 'chars' })
      article.flow.grid__end-half.--ada-lg
        //- each line in teaser
          p= line
        p.ad-copy.text-white
          | Вечеринка в честь выпуска зина #[b: +link({href: 'https://journal.piratykaspiyskogo.online/posts/zine-release'}) «МИР2»]!{spacedEmDash}фотоархив, графика, путевые заметки!{spacedEmDash}полное собрание лучших материалов за 2019–2022 гг.
        p.ad-copy.text-white
          | #[b В программе:#[br]]
          | Презентация зина, подведение итогов и анонс грядущих событий.
          //- (вы сможете приобрести 1-е печатные копии)
          | #[br]
        p.ad-copy.text-white
          | Танцуем, пьём ром, сбрасываем все якоря#[br]
          | и продолжаем двигаться вперёд!#[br]
          //- | #[i Заполните форму, чтобы узнать локацию и время проведения.]
        +cta({
          type: 'anchor',
          link: '#contact',
          text: 'Подробнее'
        })(data-js-anim='bg-gradient')

    //- section.container.spaced.--ada-lg#about
      .grid__third-rhs
        +head({ class: 'font-display', level: 2, text: 'О нас', split: 'chars' })

      .grid__content
        include ../images/arrows.svg
        include ../images/tripTent.svg
        include ../images/vinylRecord.svg
        include ../images/boatPropeller.svg

      article.flow.grid__content
        +head({ level: 2, text: about.head, split: 'chars' })
        //- +cta({
        //-   type: 'anchor',
        //-   link: '',
        //-   text: 'Узнать больше'
        //- })(data-js-anim='bg-gradient' target='_blank')

    //- section.container.spaced.--ada-md#goods
      article.flow.grid__content
        +head({ level: 2, text: 'Наш мерч', split: 'chars' })
        p.copy
          | Это наш магазин и платформа для анонса мероприятий, релизов и архив полезных материалов.
        +cta({
          type: 'anchor',
          link: '',
          text: 'Каталог товаров'
        })(data-js-anim='bg-gradient' target='_blank')

    //- section.container.spaced.--ada-md#locate
      .grid__center: +head({ level: 2, text: 'Дислокация', split: 'chars' })
      +map({
        classes: 'grid__full',
        addSidebar: false })

    section.container.spaced.--ada-md#contact
      .grid__center.d-flex.flex-centered
        +head({ level: 2, text: 'Пишите нам', split: 'chars' })
      .grid__content: +form({
        class: '',
        endpoint: '4c269348',
        phone: data.meta.phone,
        message: 'Вы можете оставить тут несколько комментариев к заявке…',
        recaptcha: true })
      //- offer: data.pages.offer.path[0]

    // Лента блога || Blog feed
    //- section.flow(data-id="posts")
      +head({ level: 2, text: 'Бортовой журнал', split: 'chars' })
      //- #FeedLabel
      ul.card-feed(
        style={ '--columns': 3 }
        aria-labelledby="#FeedLabel"
      )
        - let postCount = 3
        each i in postCount
          li.item(id=`post${i+1}`)
            +card({
              style: 'elevated',
              view: 'compact',
              media: true,
              action: true
            })
      +cta({
        type: 'anchor',
        link: '',
        text: 'Больше новостей!'
      })(data-js-anim='bg-gradient' target='_blank')

    //- News Feed (NF)
    //- section#feed(aria-label="all blog posts")
    //- +sec({
      id: 'feed',
      attList: {
        'aria-label': 'all blog posts',
        'data-sec': 'news' } })

    //- section.container.spaced.--ada-md#employees
      .grid__third-lhs.sideways
        +head({ level: 2, text: 'Команда', split: 'chars' })
      //- TODO: add markup https://schema.org/Person
      .grid__third-rhs
        +carousel({
          class: [],
          data: employees,
          imageDims: 1350 / 1080,
          imagePath: 'portraits',
          instance: 3,
          slideCols: 2,
          textWrap: 'article' })

    //- section.container.spaced.--ada-md#reviews
      .grid__center.d-grid.grid-items-center
        +head({ level: 2, text: 'Отзывы', split: 'chars' })
      .grid__content
        p.overline(
          itemprop="aggregateRating"
          itemscope itemtype="https://schema.org/AggregateRating"
          data-hidden)
          | #[span(itemprop="ratingValue")= 5] из 5 звёзд —
          | #[span(itemprop="reviewCount")= count(reviews)] отзывов на
          | #[+link({href: 'https://', text: ''})]
        +carousel({
          class: [],
          data: reviews,
          type: 'review',
          instance: 4 })

